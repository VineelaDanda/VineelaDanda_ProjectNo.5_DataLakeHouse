{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"factoryName": {
			"type": "string",
			"metadata": "Data Factory name",
			"defaultValue": "dvradf"
		},
		"ls_dls_accountKey": {
			"type": "secureString",
			"metadata": "Secure string for 'accountKey' of 'ls_dls'"
		},
		"ls_http_api_password": {
			"type": "secureString",
			"metadata": "Secure string for 'password' of 'ls_http_api'"
		},
		"ls_sql_server_password": {
			"type": "secureString",
			"metadata": "Secure string for 'password' of 'ls_sql_server'"
		},
		"ls_dls_properties_typeProperties_url": {
			"type": "string",
			"defaultValue": "https://dvrdls15.dfs.core.windows.net/"
		},
		"ls_http_api_properties_typeProperties_url": {
			"type": "string",
			"defaultValue": "https://fakestoreapi.com"
		},
		"ls_http_api_properties_typeProperties_userName": {
			"type": "string",
			"defaultValue": "vdanda"
		},
		"ls_sql_server_properties_typeProperties_server": {
			"type": "string",
			"defaultValue": "DESKTOP-GBOA63V"
		},
		"ls_sql_server_properties_typeProperties_database": {
			"type": "string",
			"defaultValue": "employee"
		},
		"ls_sql_server_properties_typeProperties_username": {
			"type": "string",
			"defaultValue": "azure_user"
		},
		"containerUri": {
			"type": "string",
			"metadata": "URI to storage account containing linked ARM templates"
		},
		"containerSasToken": {
			"type": "string",
			"metadata": "Sas token to storage account containing linked ARM templates"
		}
	},
	"variables": {
		"factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
	},
	"resources": [
		{
			"name": "dvradf_ArmTemplate_0",
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2024-03-01",
			"properties": {
				"mode": "incremental",
				"templateLink": {
					"uri": "[concat(parameters('containerUri'), '/ArmTemplate_0.json', parameters('containerSasToken'))]",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
					"factoryName": {
						"value": "[parameters('factoryName')]"
					},
					"ls_dls_accountKey": {
						"value": "[parameters('ls_dls_accountKey')]"
					},
					"ls_http_api_password": {
						"value": "[parameters('ls_http_api_password')]"
					},
					"ls_sql_server_password": {
						"value": "[parameters('ls_sql_server_password')]"
					},
					"ls_dls_properties_typeProperties_url": {
						"value": "[parameters('ls_dls_properties_typeProperties_url')]"
					},
					"ls_http_api_properties_typeProperties_url": {
						"value": "[parameters('ls_http_api_properties_typeProperties_url')]"
					},
					"ls_http_api_properties_typeProperties_userName": {
						"value": "[parameters('ls_http_api_properties_typeProperties_userName')]"
					},
					"ls_sql_server_properties_typeProperties_server": {
						"value": "[parameters('ls_sql_server_properties_typeProperties_server')]"
					},
					"ls_sql_server_properties_typeProperties_database": {
						"value": "[parameters('ls_sql_server_properties_typeProperties_database')]"
					},
					"ls_sql_server_properties_typeProperties_username": {
						"value": "[parameters('ls_sql_server_properties_typeProperties_username')]"
					}
				}
			},
			"dependsOn": []
		}
	]
}